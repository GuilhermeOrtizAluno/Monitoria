<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="300.0" styleClass="bg-primary" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ClientConectionController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="TOP_CENTER">
               <styleClass>
                  <String fx:value="bg-white" />
                  <String fx:value="box-login" />
                  <String fx:value="box-form" />
               </styleClass>
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <TextField fx:id="tfIP" alignment="CENTER" promptText="IP" text="localhost">
                           <VBox.margin>
                              <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="tfPort" alignment="CENTER" promptText="Porta">
                           <VBox.margin>
                              <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                           </VBox.margin>
                        </TextField>
                        <Button id="btnLogin" fx:id="btnConection" mnemonicParsing="false" onAction="#hundleConection" text="Conectar">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                     <styleClass>
                        <String fx:value="box-login" />
                        <String fx:value="box-form" />
                     </styleClass>
                  </VBox>
               </children>
            </Pane>
         </center>
         <top>
            <Pane prefHeight="96.0" prefWidth="300.0" BorderPane.alignment="BOTTOM_CENTER">
               <children>
                  <Label alignment="BOTTOM_CENTER" contentDisplay="CENTER" prefHeight="87.0" prefWidth="300.0" text="Cliente" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="30.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
