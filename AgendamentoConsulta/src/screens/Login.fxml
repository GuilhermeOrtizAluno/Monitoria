<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="300.0" styleClass="bg-primary" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <styleClass>
                  <String fx:value="bg-white" />
                  <String fx:value="box-login" />
               </styleClass>
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" styleClass="box-login">
                     <children>
                        <TextField fx:id="tfUser" alignment="CENTER" promptText="Username">
                           <VBox.margin>
                              <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="tfPass" alignment="CENTER" promptText="Password">
                           <VBox.margin>
                              <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                           </VBox.margin>
                        </TextField>
                        <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#hundleLogin" text="Login">
                           <VBox.margin>
                              <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                           </VBox.margin>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </Pane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
